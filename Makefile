# NAMES ====================================================================================
NAME_CHK	=	checker
NAME_SWP	=	push_swap
ARGS100		=	"4107 9834 7086 5386 8856 992 4384 8188 625 662 2107 6523 155 2692 3947 2582 8761 8999 6283 9346 5520 1231 8589 2787 7346 8696 4430 3029 5270 4573 5808 532 8103 2256 1300 7235 4022 8204 4061 8515 2453 8336 7133 7478 4571 959 7082 8970 4750 6344 70 1850 9887 8658 6881 7653 7551 5423 2141 4068 4050 5148 4830 1444 7845 8341 5875 982 8106 894 1923 5557 4797 5102 3486 8072 2690 1974 2330 7612 1557 9490 4376 7918 1761 2242 5535 6450 987 6296 1448 27 8440 510 9642 8469 6280 9619 3095 2868"
ARGS500 	=	"9439 9966 5521 9151 6252 2540 3504 5667 6230 1123 5639 6364 7158 7657 3913 937 5421 3346 7862 3874 7354 122 4026 1648 5403 7848 1976 6902 5621 6907 1163 8079 725 7030 9860 9657 8813 5827 9832 8881 7416 4820 4586 1077 4999 4067 5385 2804 30 9463 918 7122 7752 3762 441 8227 8974 5593 639 3887 2433 5532 7266 6168 6487 6111 1132 6600 7073 55 6691 4558 9947 1015 3353 2518 7233 6722 8342 2523 9319 9017 1125 8865 8320 2860 8868 8975 9032 9157 5086 5919 1963 2018 5171 6629 3736 4021 1624 3441 9582 316 1572 737 5597 4578 190 6807 9114 9557 5127 2715 3570 7270 7143 6750 8189 491 4346 7564 5579 5188 2630 1635 7626 4019 7796 6181 4081 4155 7350 9835 4595 3266 9020 3319 8222 6582 8884 1527 180 8508 8789 5860 4615 4450 3143 3867 7968 766 4387 4246 8062 5878 4821 5923 3347 8947 2757 881 7268 4613 2115 8560 6589 6978 9138 4996 271 6250 5240 9081 9778 8472 355 2224 2440 178 6805 3693 1199 3994 7579 2338 3076 8557 8076 5370 7034 4878 1505 4720 4863 2389 2253 1201 3126 839 8157 9547 7832 5632 9245 6439 6411 8337 7349 7145 8005 6794 5193 9060 9429 9398 9230 8776 2517 636 7254 88 1797 5748 5064 397 3571 8741 2181 8799 7573 9196 6257 9279 1536 1842 6854 532 3339 9572 1420 4867 1286 7726 7338 9028 6032 5896 3090 3702 576 726 5853 807 2968 5192 7953 9040 2296 6533 9704 5216 1430 1819 1078 603 5866 3040 7516 9741 1678 9818 7517 2575 3593 3041 5888 1709 6455 7261 2801 5124 4267 6546 7553 1807 304 289 6432 6135 8692 8732 3703 6494 8772 3181 519 3299 3363 1611 1190 9434 1743 5432 9917 2003 980 7078 3271 8361 2364 1451 6159 8754 2811 5315 2751 3679 8292 5569 3510 9527 1110 5190 3341 2349 8576 9959 3914 4640 4280 1826 2939 577 33 2879 2889 6522 4819 3757 8834 6254 329 675 2598 6786 9777 3034 2550 6796 4406 6381 6109 7491 3548 6209 3806 5175 7082 7432 3737 3900 42 7964 1882 5076 4807 5475 1667 7009 1446 4257 6601 5900 5630 7185 6850 6723 1262 2219 6548 6391 9333 6336 166 6227 5550 5776 1158 5161 9266 295 7426 2166 1416 9357 8211 4447 3847 6961 6204 9785 2064 9703 2612 368 2891 5277 40